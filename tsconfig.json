{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "lib": ["ES2020", "ES7", "ES6", "DOM"],
        "baseUrl": ".",
        "outDir": "./dist/",
        "paths": {
            "@www/*": ["./@www/*"]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "allowJs": true,
        "types": ["svelte"],
        "plugins": [
            { "transform": "typescript-transform-paths" },
            { "transform": "typescript-transform-paths", "afterDeclarations": true }
        ]
    },
    "exclude": ["node_modules", "dist", ".vscode", ".husky"],
    "include": [
        ".eslintrc.js",
        "rollup.config.js",
        "package.config.js",
        "prettierrc.js",
        "@www",
        "@app"
    ]
}
